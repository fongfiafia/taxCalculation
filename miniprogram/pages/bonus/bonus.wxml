<!--pages/bonus/bonus.wxml-->
<!-- 添加页面标题和描述 -->
<view class="page-title" aria-label="2024年工资计算器：个税、社保、公积金、年终奖计算" style="display:none;">
  <text>2024年工资计算器</text>
</view>
<view class="page-description" aria-label="轻松计算个人所得税、社保、公积金、年终奖、离职补偿等" style="display:none;">
  <text>轻松计算个人所得税、社保、公积金、年终奖、离职补偿等</text>
</view>

<form>
	<view class="cu-form-group margin-top">
		<view class="title">{{text1}}</view>
		<input placeholder="请输入税前年终奖" bindinput="shuiQianBonus"  type="number"></input>
    <text class="reverse text-black" >反推</text>
    <switch class="red sm" unchecked bindchange="reverse" disabled="{{disableHideReverse}}"></switch>
	</view>
  <view class=" text-xs padding myself">
      <text class="text-df">计算结果：</text>
  </view>
  <view class="cu-form-group margin-top">
      <view class="title"><text class="text-red text-bold">适用</text>税率：</view>
      <input placeholder="{{taxRate}}"  disabled="true"></input>
  </view>
  <view class="cu-form-group">
		<view class="title">扣税金额：</view>
    <input placeholder="{{taxNum}}"  disabled="true"></input>
	</view>
  <view class="cu-form-group">
		<view class="title"><text class="text-red text-bold">{{text2}}</text></view>
    <input placeholder="{{resultNum}}"  disabled="true"></input>
	</view>
</form>

<view class="padding-lr bg-white">
	<view class="text-left padding" style="white-space:pre-line">剩余反推次数： {{availableCountTimes}}次
	<text>观看广告增加<text class="text-red">10次</text>免费反推</text></view>
</view>

<view class="padding flex  justify-between bg-white" >
    <button class="cu-btn round circle lg bg-green" open-type="share">分享朋友</button>
    <button class="cu-btn round circle lg bg-green" bindtap="watchAdvert" hidden="{{hideAdvert}}">观看广告</button>
</view>




<view class="adContainer">
  <ad unit-id="adunit-210099d71f8acc47" ad-intervals="30"></ad>
</view>
