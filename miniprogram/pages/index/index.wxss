/**index.wxss**/
.shareText{
  font-size: 28px;
  color: #666;
  text-align: center;
  margin-top: 40rpx;
}
.btn-image{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
}
.weui-btn-area{
  padding-top: 20%
}
.btn-area{
  margin-top: 40rpx;
  margin-bottom: 60rpx;
}
.image{
  width: 80rpx;
  height: 80rpx
}
.cu-btn{
  width: 200rpx;
  height: 200rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #4CAF50;
  color: gray;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease;
}
.cu-btn:active {
  transform: scale(0.95);
}
.btn-share{
  background: transparent;
  border: none;
  padding: 0;
}
button::after{
  border: none;
  width: 100px;
  height: 100px;
}
.page{
  background-color: #f8f8f8;
  min-height: 100vh;
  padding: 20rpx;
}
.circle{
  width: 80%;
  height: 100px;
  border: 0 solid #ffffff;
  border-radius: 98rpx; 
  background-color: beige;
  padding-left: 20px
}
.page__bd{
  height: 100%
}
.text-myself{
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  vertical-align: middle
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.ad{
  position: flex;
  bottom: 80%;
}

.adsec{
  width: 90%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  margin: 10rpx auto;
  background:rgba(255,255,255,255);
  border-radius:6px;
  padding: 7rpx 10rpx;
  height: 50rpx;
}
.adsec icon{
  display: flex;
  margin-right: 10rpx;
}
.swiper_container {
  height: 55rpx;
  width: 80%;
  line-height: 55rpx;
  padding-left: 10rpx;
}
 
.swiper_item {
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
}

/* 在现有样式的基础上添加以下内容 */

.faq-section {
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-top: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.faq-list {
  border-top: 1rpx solid #eee;
}

.faq-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.faq-question {
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.faq-toggle {
  color: #999;
  font-size: 24rpx;
}

.faq-answer {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
  padding-left: 20rpx;
  border-left: 4rpx solid #4CAF50;
}
