/**index.wxss**/
.shareText{
  font-size: 14px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 0px
}
.btn-image{
  padding-top: 70px;
  height: 40px;
  padding-bottom: 0px
}
.weui-btn-area{
  padding-top: 20%
}
.btn-area{
  padding-top: 20%
}
.image{
  width: 30px;
  height: 30px
}
.cu-btn{
  height: 100%
}
.btn-share{
  background: white
}
button::after{
  border: none;
  width: 100px;
  height: 100px;
}
.page{
  background: white;
  height: 100%
}
.circle{
  width: 80%;
  height: 100px;
  border: 0 solid #ffffff;
  border-radius: 98rpx; 
  background-color: beige;
  padding-left: 20px
}
.page__bd{
  height: 100%
}
.text-myself{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  vertical-align: middle
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.ad{
  position: flex;
  bottom: 80%;
}

.adsec{
  width: 90%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  margin: 10rpx auto;
  background:rgba(255,255,255,255);
  border-radius:6px;
  padding: 7rpx 10rpx;
  height: 50rpx;
}
.adsec icon{
  display: flex;
  margin-right: 10rpx;
}
.swiper_container {
  height: 55rpx;
  width: 80%;
  line-height: 55rpx;
  padding-left: 10rpx;
}
 
.swiper_item {
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
}